        </Root>

        <Logger name="com.example.realtimemessaging" level="debug" additivity="false">
            <AppenderRef ref="Console"/>
            <AppenderRef ref="RollingFile"/>
            <!-- <AppenderRef ref="KafkaAppender"/> -->
        </Logger>
    </Loggers>
</Configuration>
